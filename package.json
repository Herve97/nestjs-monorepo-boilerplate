{
  "name": "monorepo",
  "version": "0.0.2",
  "description": "monorepo",
  "workspaces": {
    "packages": [
      "./apps/*"
    ]
  },
  "author": {
    "name": "Mike Lima",
    "email": "mike.rodrigues.lima@gmail.com"
  },
  "homepage": "https://github.com/mikemajesty/nestjs-monorepo#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikemajesty/nestjs-monorepo.git"
  },
  "engines": {
    "node": ">=14 <=15"
  },
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:all": "nest build main-api && nest build modules",
    "format": "prettier --write \"apps/**/*.{ts,js}\" ",
    "start": "nest start",
    "start:main": "nest start main-api --watch \"apps/**/*.{ts,js}\"",
    "start:prod": "node dist/apps/main-api/main.js",
    "lint": "eslint \"apps/**/*.{ts,js}\" --fix",
    "test": "jest",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config ./jest-e2e.ts",
    "commit": "cz",
    "tag:production": "changelog generate && cd devops && bash ./tag-create.sh && cd .."
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.11",
    "@types/express": "^4.17.13",
    "@types/node": "^16.0.0",
    "typescript": "^4.3.5",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "tsconfig-paths": "^3.10.1",
    "source-map-support": "^0.5.20",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.0.0",
    "husky": "^7.0.4",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "cz-conventional-changelog": "3.3.0",
    "supertest": "^6.1.3",
    "@types/jest": "^27.0.1",
    "jest": "^27.2.5",
    "ts-jest": "^27.0.3",
    "@app/config.eslint": "*"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "license": "MIT"
}