{
  "name": "monorepo",
  "version": "0.0.10",
  "description": "Nestjs monorepo",
  "workspaces": {
    "packages": [
      "./apps/*",
      "./libs",
      "./tools/eslint"
    ]
  },
  "author": {
    "name": "Mike Lima",
    "email": "mike.rodrigues.lima@gmail.com"
  },
  "homepage": "https://github.com/mikemajesty/nestjs-monorepo#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikemajesty/nestjs-monorepo.git"
  },
  "engines": {
    "node": ">=14 <=15"
  },
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "prepare": "husky install",
    "build": "nest build",
    "monorepo:install": "yarn && yarn workspace @app/eslint.config install && yarn workspace @app/libs install && yarn workspace @app/main.api install && yarn workspace @app/other.api install",
    "format": "prettier --write \"apps/**/*.{ts, js, json}\" \"libs/**/*.{ts, js, json}\" ",
    "lint": "yarn format && eslint \"apps/**/*.{ts, js, json}\" \"libs/**/*.{ts, js, json}\" --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config ./jest.config.e2e.ts",
    "commit": "cz",
    "start:main": "nest start @app/main-api --debug 0.0.0.0:5870 --watch",
    "start:other": "nest start @app/other-api --debug 0.0.0.0:5880 --watch",
    "start:main:prd": "node dist/apps/main-api/main.js",
    "start:other:prd": "node dist/apps/other-api/main.js",
    "tag:production": "changelog generate && cd devops && bash ./tag-create.sh && cd .."
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.1.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^7.0.4",
    "jest": "^27.2.5",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "license": "MIT"
}