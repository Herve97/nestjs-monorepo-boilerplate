{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "<rootDir>/coverage",
  "testEnvironment": "node",
  "roots": ["<rootDir>/apps/"],
  "coveragePathIgnorePatterns": [
    "index.ts",
    "main.ts",
    "node_modules",
    "coverage"
  ],
  "setupFilesAfterEnv": ["<rootDir>/apps/jest/jest-init.ts"],
  "coverageThreshold": {
    "global": {
      "functions": 50,
      "statements": 50,
      "branches": 50,
      "lines": 50
    }
  }
}